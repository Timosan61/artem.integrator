# Пример файла .env.test для локального тестирования
# Скопируйте этот файл в .env.test и заполните реальными значениями

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_test_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-ngrok-url.ngrok.io/webhook

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic (для MCP)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ngrok
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here

# MCP
MCP_ENABLED=true

# Voice Service
VOICE_ENABLED=true
VOICE_OPENAI_API_KEY=${OPENAI_API_KEY}

# Debug
DEBUG=true
ENVIRONMENT=development

# Database (используется Docker Compose)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/artem_test

# Redis (используется Docker Compose)
REDIS_URL=redis://redis:6379

# Admin users (список ID через запятую)
ADMIN_USER_IDS=123456789,987654321

# Test configuration
TEST_USER_ID=123456789
TEST_USERNAME=test_admin