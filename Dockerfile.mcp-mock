# MCP Mock Server для тестирования
FROM python:3.11-slim

WORKDIR /app

# Установка зависимостей
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn \
    httpx \
    pydantic

# Копирование mock сервера
COPY mcp-mock/server.py /app/

# Порт
EXPOSE 9000

# Запуск сервера
CMD ["uvicorn", "server:app", "--host", "0.0.0.0", "--port", "9000", "--reload"]