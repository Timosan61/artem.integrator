FROM artem-mcp-base:latest

# Копируем конфигурацию MCP сервера
COPY docker/mcp/servers/cloudflare/ /app/

# Установка зависимостей для Cloudflare MCP
RUN npm install cloudflare axios

# Переменные окружения
ENV MCP_SERVER_NAME=cloudflare
ENV MCP_SERVER_PORT=3004

# Запуск MCP сервера
CMD ["node", "server.js"]